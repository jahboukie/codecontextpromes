# CodeContextPro-MES Environment Variables Template
# Copy to .env and fill in your values

# Firebase Configuration (PUBLIC - safe for client-side)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Stripe Configuration (PUBLIC - publishable keys only)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Application Configuration
APP_VERSION=1.0.0
NODE_ENV=development

# Note: NEVER put secret keys in this file!
# Secret keys go in Firebase Functions config or Secret Manager:
# - STRIPE_SECRET_KEY (Firebase Functions only)
# - ENCRYPTION_MASTER_KEY (Firebase Functions only)
# - ANTHROPIC_API_KEY (Firebase Functions only)